{
  "rules": {
    "max-line-length": { "options": [100], "severity": "warning" },
    "no-lowlevel-commenting": { "severity": "warning" },
    "discreet-ternary": { "severity": "warning" },
    "curly": { "severity": "warning" },
    "typedef": false,
    "jsx-wrap-multiline": false,
    "ter-arrow-parens": { 
      "options": ["always"], 
      "severity": "warning" 
    }
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "webpack.config.js"
    ]
  },
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-airbnb", "tslint-config-silind"]
}
